<div class="panel panel-info">
	<div class="panel-heading">
		<%= link_to edit_task_path(task) do %>
		<i class="fa fa-pencil-square"></i> Created <%= time_ago_in_words(task.created_at) %> ago
		<% end %>
	</div>
	<div class="panel-body">
		<%= task.content %>
	</div>
	<div class="panel-footer text-center">
		<% if task.state == "doing" %>
			<div class="btn-group btn-group-justified">
				<%= link_to "<i class='fa fa-backward'></i> ToDo".html_safe, change_task_path(task, state: "to_do"), method: :put, class: "btn btn-primary btn-md btn-block" %>
				<%= link_to "Done <i class='fa fa-forward'></i>".html_safe, change_task_path(task, state: "done"), method: :put, class: "btn btn-primary btn-md btn-block"  %>	
			</div>
		<% elsif task.state == "to_do" %>
			<%= link_to "Doing <i class='fa fa-forward'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-primary btn-md btn-block"  %>
		<% else %>
			<%= link_to "<i class='fa fa-backward'></i> Doing".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-primary btn-md btn-block"  %>	
		<% end %>
	</div>
</div>