<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-12">
    <%= link_to new_task_path do %>
    <div class="btn btn-lg btn-success">
      <i class="fa fa-pencil-square-o fa-lg"></i> Create New Task
    </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <h1 class="text-center">TO DO</h1>
    <%= render @todo %> 
  </div>
  <div class="col-md-4">
    <h1 class="text-center">DOING</h1>
    <%= render @doing %>
  </div>
  <div class="col-md-4">
    <h1 class="text-center">DONE</h1>
    <%= render @done %>
  </div>
</div>

